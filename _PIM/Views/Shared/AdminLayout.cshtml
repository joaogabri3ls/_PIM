<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Admin Dashboard</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">  
    <link rel="stylesheet" href="~/css/admin.css">
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="d-flex flex-column flex-shrink-0 p-3 sidebar" style="width: 280px;">
        <h1>Cultivarte</h1>
        <ul class="nav nav-pills flex-column mb-auto">
            <li class="nav-item">
                <a class="nav-link text-white" asp-controller="Produto" asp-action="Index">
                    <i class="bi bi-archive-fill"></i>
                    Produtos
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" asp-controller="Sensor" asp-action="Index">
                    <i class="bi bi-speedometer"></i>
                    Sensores
                </a>
            </li>
        </ul>
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    @RenderSection("Scripts", required: false)
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>